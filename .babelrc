{
    "plugins": [
      "transform-decorators-legacy",
      "transform-class-properties",
      "syntax-decorators"
    ],
    "presets": [
      ["env", {
        "modules": false,
        "useBuiltIns": "entry",
        "targets": {
          "browsers": [
            "last 2 versions",
            "> 1%"
          ]
        }
      }],
      "stage-2",
      "react"
   ],
    "env": {
      "test" : {
        "presets": [
          "react", "es2015"
        ],
        "plugins": [
          "istanbul",
          "transform-decorators-legacy",
          "transform-class-properties",
          "syntax-decorators"
        ]
      },
      "development": {
        "plugins": [
          "react-hot-loader/babel"
        ]
      },
      "production": {
        "presets": ["react-optimize"]
      }
    }
  }
  